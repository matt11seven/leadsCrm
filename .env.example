# Configurações do PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=leadscrm
POSTGRES_HOST=localhost

# Configurações de rede
POSTGRES_PORT=35431

# Configurações do Webhook
# Substitua com os valores atuais ou use as variáveis do Easypanel
PROJECT_NAME=ops-s
SERVICE_NAME=webhook
PRIMARY_DOMAIN=seu-dominio.easypanel.host
# URL do webhook será montada como: https://${PROJECT_NAME}-${SERVICE_NAME}.${PRIMARY_DOMAIN}/lead-events
WEBHOOK_PATH=/lead-events
WEBHOOK_INSECURE=false # Defina como true para ignorar validação de certificado (não recomendado para produção)

# Opcional: Caso queira usar uma imagem específica
# IMAGE=postgres:17
